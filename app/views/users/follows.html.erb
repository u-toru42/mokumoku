<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">フォロー一覧</h1>
    </div>
    <div class="row justify-content-center">
      <% @users.each do |user| %>
      <div class="one-post card">
        <%= link_to user_path(user) do %>
          <p class="caption h4">
            <%= image_tag @user.decorate.avatar, class: 'rounded-circle avatar-lg' %>
            <%= user.name %>
          </p>
        <% end %>
      </div>
      <% end %>
    </div>
    <%= paginate @users %>
  </div>
</div>