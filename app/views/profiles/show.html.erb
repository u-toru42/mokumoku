<div class="card">
  <div class="card-header">
    <h3 class="mb-0">プロフィール</h3>
  </div>
  <!-- Card body -->
  <div class="card-body">
    <hr class="my-5">
      <div>
        <h4 class="mb-0">Personal Details</h4><br>
          <div class="d-flex align-items-center mb-4 mb-lg-0">
            <%= image_tag @user.decorate.avatar, class: 'rounded-circle avatar-lg' %>
          </div><br>
          <div class="d-flex"><br>
            <%= link_to follows_user_path(@user) do %>
              <h6>フォロー<%= @following_users.count %></h6>
            <% end %>&nbsp;&nbsp;
            <%= link_to followers_user_path(@user) do %>
              <h6>フォロワー<%= @follower_users.count %></h6>
            <% end %>
        </div>
        <!-- Form -->
        <%= form_with(model: @user, url: profile_path) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= @user.email %>
          </div>
          <div class="mb-3">
            <%= f.label :name, class: 'form-label' %>
            <%= @user.name %>
          </div>
          <!-- hobby欄を追加-->
          <div class="mb-3">
            <%= f.label :hobby, class: 'form-label' %>
            <%= @user.hobby %>
          </div>
          <!-- profile欄を追加 -->
          <div class="mb-3">
            <%= f.label :profile, class: 'form-label' %>
            <%= @user.profile %>
          </div>
        <% end %>
        <div class="d-flex align-items-center mb-4 mb-lg-0">
          <% if current_user.following?(@user) %>
            <%= link_to 'フォローを外す', user_relationships_path(@user), method: :delete, class: "btn-sm btn-danger" %>
          <% else %>
            <%= link_to 'フォローする', user_relationships_path(@user), method: :POST, class:"btn-sm btn-success" %>
          <% end %>
        </div><br>
    </div>
  </div>
</div>
      